<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="InvestMapper">
	
	<select id="investList" resultType="kr.co.creator.vo.ProjectVO">
		select	*
		from	project_list
	</select>
	
<!-- 	<select id="investDetail" parameterType="kr.co.creator.vo.ProjectVO" resultType="kr.co.creator.vo.ProjectVO"> -->
<!-- 		SELECT *  -->
<!-- 		FROM project_list LEFT OUTER JOIN guarantee  -->
<!-- 		ON project_list.project_num = guarantee.project_num  -->
<!-- 		WHERE project_list.project_num = #{project_num} -->
<!-- 	</select> -->
	
	<select id="projectDetail" parameterType="kr.co.creator.vo.ProjectVO" resultType="kr.co.creator.vo.ProjectVO">
		select	*
		from	project_list 
		where 	project_num = #{project_num}
	</select>
		
	<select id="guaranteeDetail" parameterType="kr.co.creator.vo.GuaranteeVO" resultType="kr.co.creator.vo.GuaranteeVO">
		select	*
		from	guarantee 
		where 	project_num = #{project_num}
	</select>
	
	<select id="investFinish" resultType="kr.co.creator.vo.ProjectVO">
		select	*
		from	project_list
		where	ach_state = "상환완료" || ach_state = "중도상환"
	</select>
	
</mapper>